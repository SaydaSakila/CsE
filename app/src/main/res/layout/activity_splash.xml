<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/celebration"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    tools:context=".SplashActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Department of \nComputer Science and Engineering"
        android:textColor="#006400"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_height="100dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/iebclbrting"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="International University of Business Agriculture and Technology"
        android:textColor="#006400"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_height="100dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/crowd"
        android:layout_height="wrap_content"/>



</LinearLayout>
